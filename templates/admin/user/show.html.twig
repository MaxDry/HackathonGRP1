{% extends './admin/base.html.twig' %}

{% block title %}Utilisateur {{ user.firstName }}{% endblock %}

{% block body %}
    <h1>Utilisateur {{ user.firstName }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ user.picture }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>
                    {{ user.isActive ? 'Actif' : 'Inactif' }}
                </td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Créé par</th>
                <td>{{ user.createdBy }}</td>
            </tr>
            <tr>
                <th>Modifié par</th>
                <td>{{ user.updatedBy }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_USER_EDIT') %}
        <a class="btn btn-primary" href="{{ path('admin_user_edit', {'slug': user.slug}) }}" role="button">Modifier</a>
    {% endif %}
    
    {% if is_granted('ROLE_USER_DELETE') %}
        {{ include('admin/user/_delete_form.html.twig') }}
    {% endif %}
    <a class="btn btn-secondary" href="{{ path('admin_user_index') }}" role="button">Retour</a>
{% endblock %}
