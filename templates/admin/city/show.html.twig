{% extends './admin/base.html.twig' %}

{% block title %}Ville de {{ city.name }}{% endblock %}

{% block body %}
    <h1>Ville de {{ city.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ city.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ city.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ city.isActive ? 'Actif' : 'Inactif' }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ city.createdAt ? city.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ city.updatedAt ? city.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Créé par</th>
                <td>{{ city.createdBy }}</td>
            </tr>
            <tr>
                <th>Modifié par</th>
                <td>{{ city.updatedBy }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_CITY_EDIT') %}
        <a class="btn btn-primary" role="button" href="{{ path('admin_city_edit', {'slug': city.slug}) }}">Modifier</a>
    {% endif %}
    <a class="btn btn-secondary" role="button" href="{{ path('admin_city_index') }}">Retour</a>
    {% if is_granted('ROLE_CITY_DELETE') %}
        {{ include('admin/city/_delete_form.html.twig') }}
    {% endif %}
    
{% endblock %}
