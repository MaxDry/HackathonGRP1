{% extends './admin/base.html.twig' %}

{% block title %}Dispositif de formation {{ training_measure.name }}{% endblock %}

{% block body %}
    <h1>Dispositif de formation {{ training_measure.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ training_measure.id }}</td>
            </tr>
            <tr>
                <th>Intitulé</th>
                <td>{{ training_measure.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ training_measure.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ training_measure.createdAt ? training_measure.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ training_measure.updatedAt ? training_measure.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Créé par</th>
                <td>{{ training_measure.createdBy }}</td>
            </tr>
            <tr>
                <th>Modifié par</th>
                <td>{{ training_measure.updatedBy }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" role="button" href="{{ path('admin_training_measure_index') }}">Retour</a>
    <a class="btn btn-primary" role="button" href="{{ path('admin_training_measure_edit', {'slug': training_measure.slug}) }}">Modifier</a>

    {{ include('admin/training_measure/_delete_form.html.twig') }}
{% endblock %}
