{{ form_start(form) }}
    <div class="d-flex flex-column ml-3 mb-4">
        <div class="my-2">
            {{ form_errors(form.email) }}
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
        </div>
        <div class="my-2">
            {{ form_errors(form.first_name) }}
            {{ form_label(form.first_name) }}
            {{ form_widget(form.first_name) }}
        </div>
        <div class="my-2">
            {{ form_errors(form.last_name) }}
            {{ form_label(form.last_name) }}
            {{ form_widget(form.last_name) }}
        </div>
        {% if form.password is defined %}
            <div class="my-2">
                {{ form_errors(form.password) }}
                {{ form_widget(form.password) }}
            </div>
        {% endif %}
        <div class="my-2">
            {{ form_errors(form.picture) }}
            {{ form_label(form.picture) }}
            {{ form_widget(form.picture) }}
        </div>
        <div class="my-2">
            {{ form_errors(form.profile) }}
            {{ form_label(form.profile) }}
            {{ form_widget(form.profile) }}
        </div>
        <div class="my-2">
            <label class="switch is-active">
                {{ form_widget(form.is_active) }}
                <div class="slider"></div>
            </label>
        </div>
    </div>
    <button class="btn btn-success">{{ button_label|default('Ajouter') }}</button>
{{ form_end(form) }}
